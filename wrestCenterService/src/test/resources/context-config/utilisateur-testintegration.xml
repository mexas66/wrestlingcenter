<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:jpa="http://www.springframework.org/schema/data/jpa"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/data/jpa 
   		http://www.springframework.org/schema/data/jpa/spring-jpa-1.0.xsd">
   		
   		<bean name="utilisateurService" class="fr.wrestling.center.Service.utilisateur.UtilisateurService" />
   		
   		<bean name="entityManagerFactory" class="org.springframework.orm.jpa.LocalEntityManagerFactoryBean"/>
   		
   		<bean name="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager" />
   		
   		<jpa:repositories base-package="fr.wrestling.center.DAO.*" transaction-manager-ref="transactionManager">
   		</jpa:repositories>

</beans>